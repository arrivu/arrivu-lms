<div id="notification_types" style="margin-top: 10px;">  
  <p style="font-size: 1.2em;">
  
  <h2><%= image_tag "favicon_large.png", :style => 'vertical-align: middle;' %> <%= t :settings_title, "Jigsaw LMS Notification Settings" %></h2>
  <div style="margin-bottom: 10px;">
    <a href="<%= facebook_url %>" class="btn"><%= image_tag "back.png" %> <%= t :back_to_messages, "Back to Messages" %></a>
  </div>
  <%= t :notifications_config_notice, "Notifications from Jigsaw LMS can automatically be sent over to your Facebook account. Below you'll see the types of notifications you can have sent. You can change your notification preferences at any time, either here or in Jigsaw LMS." %></p>
  <div id="notification_types_holder">
    <% if @user %>
      <%= render :partial => "notification_policies" %>
    <% else %>
      <%= t :link_needed, "Before you can configure the Jigsaw LMS Facebook App you need to link it to your Jigsaw LMS login. Please click \"Welcome\" for more information." %>
    <% end %>
  </div>
</div>
<% js_bundle 'legacy/facebook_settings' %>
