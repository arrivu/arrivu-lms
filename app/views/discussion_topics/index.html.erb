
<% if params[:course_home_view] %>
    <% js_block do %>
        <script>
            require([
                'jquery' /* $ */,
                'jquery.ajaxJSON' /* ajaxJSON */,
                'jqueryui/dialog',
                'compiled/jquery/fixDialogButtons' /* fix dialog formatting */,
                'jquery.loadingImg' /* loadingImg, loadingImage */,
                'vendor/jquery.scrollTo' /* /\.scrollTo/ */,
                'compiled/behaviors/openAsDialog'
            ], function($) {


                $("#announcements_dialog").dialog({modal: true,width:1000,height:485});

            });
        </script>
    <% end %>

    <form id="announcements_dialog" data-turn-into-dialog='{"width":1000,"modal":true}' style="display:none" title="Announcements">
      <%= render :partial => 'announcements/content' %>
    </form>
 <%end  %>

<%
  @body_classes << 'hide-content-while-scripts-not-loaded'

  content_for :page_title, join_title(t('#titles.discussions', "Discussions"), @context.name)

