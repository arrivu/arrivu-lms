<% submission = submission_type_icon || nil %>
<% if submission %>
  <% if submission.submission_type == "online_url" %>
    <%= image_tag "link.png", :title => t('tooltips.submitted', "Submitted") %>
  <% elsif submission.submission_type == "online_text_entry" || submission.submission_type == "discussion_topic" %>
    <%= image_tag "text_entry.png", :title => t('tooltips.submitted', "Submitted") %>
  <% elsif submission.submission_type == "online_upload" %>
    <%= image_tag "file.png", :title => t('tooltips.submitted', "Submitted") %>
  <% elsif submission.submission_type == "online_quiz" %>
    <%= image_tag "quiz.png", :title => t('tooltips.submitted', "Submitted") %>
  <% else %>
    <%= image_tag "file.png", :title => t('tooltips.submitted', "Submitted") %>
  <% end %>
<% end %>