{{#if popular_course}}
    <div class="span3 content-box resource" style="float:right;width: 300px;margin:13px;right:-10px" id="is_a_popular_course" data-id="{{popular_id}}">
        <div class="ribbon-wrapper">
            <div class="ribbon-wrapper-green"><div class="ribbon-green">Popular</div></div>
        </div>
{{else}}
    <div class="span3 content-box resource" style="float:right;width: 300px;margin:13px;right:-10px" id="is_not_a_popular_course" >
{{/if}}
{{#if has_course_image}}
    <div class="type-tag-positioner" style="background-image: url('{{course_background_image}}');background-size: cover;">
        <img alt="Course_image" class="course-badge img-circle" src="{{course_image}}" style="padding:5px;">
{{else}}
    <div class="type-tag-positioner" style="">
{{/if}}
{{#each course_topic_details}}
    {{#if has_topic}}
            <div class="type ribbon1" style="background-color: {{topic_color}};">
                <span>{{topic_name}}</span>
            </div>
    {{else}}
            <div class="type ribbon1" style="background-color: #228b22">
                <span>others</span>
            </div>
    {{/if}}
{{/each}}
</div>
    <div class="details" data-id="{{id}}" id="{{id}}" style="padding: 13.5em 18px 2em 15px;color: #dd472b;font-weight: normal;">
        <h2>
            {{course_name}}
        </h2>
        <table style="margin-top: 23px;color:#0F0D0D;;font-weight: 100;">
            <tr>
                {{#each course_price}}
                    {{#if show_price}}
                        <td>
                            <img src="/images/icon-price.jpg" style="width:16px;height:16px;padding-left:22px;">
                        </td>
                        <td>
                            {{course_price}}
                        </td>
                    {{else}}
                        <td style="padding-left:14px;padding-right: 15px;">
                            Free
                        </td>
                    {{/if}}
                {{/each}}
                {{#if course_modules}}
                    <td style="padding-left: 14px;">
                        <a class="icon-module"></a>
                    </td>
                    <td>
                        {{course_modules}}
                    </td>
                {{/if}}
                {{#if users_count}}
                    <td style="padding-left: 30px;">
                        <a class="icon-user"></a>
                    </td>
                    <td style="padding-left:2px">
                        {{users_count}}
                        <span
                                data-tooltip title="Course has {{users_count}} users">
                </span>
                    </td>
                {{/if}}
                {{#if tags_count}}
                    <td style="padding-left: 32px;">
                        <a class="icon-tag"></a>
                    </td>
                    <td style="padding-left: 2px">
                        {{tags_count}}
                    </td>
                {{/if}}
            </tr>
        </table>
        {{#if course_tags}}
            <ul class="tags" style="list-style-type: none;">
                {{#each course_tags}}
                    <li>
                        <a href="#"><b>{{tag_name}}</b>
                            <span>{{each_tag_count}}</span>
                        </a>

                    </li>
                {{/each}}
            </ul>
        {{/if}}
        {{#if course_short_decription}}
            <p class="desc course_desc" style="margin-left: -15px;margin-top: -1px;float:left;font-size: small;">
                {{{ truncate course_short_decription 100 }}}
            </p>
        {{/if}}
      {{#if has_teacher}}
        <div class="author_slider_index_pop_up_view" style="width:210px;height:67px;margin-top: 12px;left: 26px;position:relative;margin-bottom: -11px">
            <a title="" href="#" class="prev icon-arrow-left" style="margin-top: 15px;margin-left: -45px;position: absolute;"></a>
            <div class="slides" style="width:255px;height:66px; margin-top: -3px;overflow: hidden;position: relative;float:left;text-align: center;text-indent: 2px;margin-left:-25px">
                {{#each profile_data }}
                    {{#if teacher_desc}}
                        <div class="items"  style="text-align: left; margin: 10px 0px;">
                            <div style="float: left;width:26px; margin: 0px 10px 3px 0px;"><img src={{teacher_image}}></div>
                            <p style="margin-top: -15px;font-weight: 700;color: black;">{{teacher_name}}</p>
                            <span style="color: black;">{{{ truncate teacher_desc 80 }}}</span>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
            <a title="" href="#" class="next icon-arrow-right" style="margin-top: 16px;margin-left:246px;position: absolute;"></a>
        </div>
      {{/if}}
    </div>
</div>
</div>
</div>