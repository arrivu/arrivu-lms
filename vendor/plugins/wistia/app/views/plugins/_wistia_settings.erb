<% fields_for :settings, OpenObject.new(settings) do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td><%= f.label :username, :en => "username" %></td>
      <td>
        <%= f.text_field :username %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :secret_password, :en => "Secret Password" %></td>
      <td>
        <%= f.text_field :secret_password %>
      </td>
    </tr>
    <tr>
      <td><%= f.label :public_token, :en => "Public Token" %></td>
      <td>
        <%= f.text_field :public_token %>
      </td>
    </tr>
    </table>
<% end %>
