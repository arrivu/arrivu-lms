<div class="stats_enrollment_box">
    <p><%= @total_or_unique %> <%= @student_or_teacher %> Enrollments<!-- <i class="icon-question standalone-icon"> --></i></p>
    <p class="enrollment_number"><%= number_with_delimiter(@value, :separator => ",") %></p>
    <p class="enrollment_term_switcher">
        <label>Term: </label>
        <select data-totalOrUnique="<%= @total_or_unique.downcase %>" data-enrollmentType="<%= @student_or_teacher.downcase %>">
          <%
            terms = []
            @terms.each do |term|
              terms.push [term.name, term.id]
            end
          %>
          <%= options_for_select(terms, @current_term.id) %>
        </select>
        <span class="spinner_container"></span>
    </p>
</div>