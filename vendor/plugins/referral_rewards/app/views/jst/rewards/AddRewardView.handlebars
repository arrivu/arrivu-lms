<fieldset>
  <div class="control-group">
    <label class="control-label" for="reward_name">Name</label>
    <div class="controls">
      <input type="text" id="reward_name" value="{{name}}" name="canvas_app_name">
    </div>
  </div>
  {{#each configOptions}}
    <div class="control-group">
      {{#if this.isCheckbox}}
        <div class="controls">
          <label class="checkbox">
            <input type="checkbox" id="reward_{{this.name}}" name="{{this.name}}" value="1"> {{this.description}}
          </label>
        </div>
      {{else}}
        {{#if isText}}
          <label class="control-label" for="app_{{this.name}}">{{this.description}}</label>
          <div class="controls">
            <input type="text" id="reward_{{this.name}}" name="{{this.name}}">
          </div>
        {{else}}
          <label class="control-label" for="app_{{this.name}}">{{this.description}}</label>
          <div class="controls">
            <input type="text" id="reward_{{this.name}}" name="{{this.name}}">
          </div>
        {{/if}}
      {{/if}}
    </div>
  {{/each}}
</fieldset>