<% @show_left_side = true %>

<% form_for :referral, :url => course_referrals_path, :html => {:method => :post } do |f| %>

    <table id="dataTable">
      <tr>

      </tr>
      <tr>
        <td><%= f.blabel :email_subject, :en => "Email Subject" %></td>
        <td><%= f.text_field :email_subject, :value => @reward.email_subject  %></td>
      </tr>
      <tr>
        <td><%= f.blabel :email_text, :en => "Email Text" %></td>
        <td><%= f.text_field :email_text  %></td>
      </tr>
      <tr>
        <td></td>
        <td><button type="submit" class="btn btn-primary"><%= t "#buttons.submit", "Submit" %></button></td>
      </tr>
    </table>
<% end %>
