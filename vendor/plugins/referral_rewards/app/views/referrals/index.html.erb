<%
       content_for :page_title, join_title("Course Referrals", @context.name)
   js_bundle :course_referrals
   @active_tab = "referrals"

%>

<div id="course_reference_tabs" style="display:block;" class="ui-tabs-minimal">
  <ul>
    <li id="invite_friends"><a href="#invite">Invite friends</a></li>
    <li id="my_references"><a href="#references">My References</a></li>
    <li id="bonus_space"><a href="#bonus">Bonus space</a></li>
  </ul>

  <div id="invite">
    <div class="container">
      <div class="span10" >
        <div class="span5">
          <h5 style="border-bottom: 1px solid;width: 100%;margin:9px;">Invite by Email </h5>

          <% form_for @referral, :url => url_for(:controller => 'referrals', :action => 'create_email_referrals')  do |f| %>

              <td><%= f.blabel :friends_email, :en => "Friends Email" %></td>
              <td><%= f.text_area :referral_emails, :rows=>"5", :class=>"span5"  %></td>

                <td><%= f.blabel :email_subject, :en => "Email Subject" %></td>
                <td><%= f.text_field :email_subject, :class=>"span5" %></td>

                <td><%= f.blabel :email_message, :en => "Email Message" %></td>

                <td><%= f.text_area :email_text, :rows=>"5", :class=>"span5"  %></td>

               <%=f.submit  "Send Invites", :class =>"btn btn-primary"%>

              </div>
        <div class="span3" style="margin: 0px 50px;">
          <p style="margin:12px 3px">Your invite url to share<br>Paste it in your blog!</p>
          <input type="text" name="email address" style="height:35px" value="<%="#{@domain_url}#{@reference_gl.short_url_code}"%>">
          <br>
          Or

          <p>  invite via social media</p>
          <div id="right-side" style="margin: 0 0 0; width: 227px;">
          <a href="<%="#{@domain_url}#{@reference_li.short_url_code}"%>" class="btn button-sidebar-wide"><i class="icon-linkedin "></i> Share on LinkedIn</a>
          <a href="<%="#{@domain_url}#{@reference_fb.short_url_code}"%>" class="btn button-sidebar-wide"><i class="icon-facebook-boxed"></i> Share on Facebook</a>
          <a href="<%="#{@domain_url}#{@reference_tw.short_url_code}"%>" class="btn button-sidebar-wide"><i class="icon-twitter-boxed"></i> Share on Twitter</a>
          <a href="<%="#{@domain_url}#{@reference_go.short_url_code}"%>" class="btn button-sidebar-wide"><i class="icon-peer-review"></i> Share on Google</a>
        </div></div></div>


  </div>
          <% end %>

  <div id="references">
    tab-tools
  </div>


  <div id="bonus">
  tab-tools
</div>
</div>
</div>

