
<% content_for :page_title, t(:page_title, "Rewards") %>
<% @show_left_side = true %>


<% content_for :right_side do %>
    <div class="rs-margin-all">
      <a href="rewards/new" class="add_user_link btn button-sidebar-wide"><i class="icon-add"></i> <%= t(:new_reward_link, "Add New Reward") %></a>
    </div>
<% end %>



<table id="dataTable"  class = "table table-bordered table-striped">
  <tr>
    <th>Course Name</th>
    <th>Coupon Name</th>
    <th>Alpha Mask</th>
    <th>Referrer Amount </th>
    <th>Referrer Percentage </th>
    <th>Referree Amount </th>
    <th>Referree Percentage </th>
    <th>Referrer Expiry Date</th>
    <th>Referree Expiry Date</th>
    <th>How Many</th>
    <th>Actions</th> <th></th>

  </tr>


  <% @rewards.each do |reward| %>
      <tr>


        <td><%= Course.find(reward.metadata).name %></td>
        <td><%= reward.name %></td>
        <td><%= reward.alpha_mask %></td>
        <td><%= reward.referrer_amount  %></td>
        <td><%= reward.referrer_percentage %></td>
        <td><%= reward.referree_amount %></td>
        <td><%= reward.referree_percentage %></td>
        <td><%= reward.referrer_expiry_date %></td>
        <td><%= reward.referree_expiry_date %></td>
        <td><%= reward.how_many %></td>

        <td><%= link_to 'edit', {:action => 'edit', :id => reward} %></td>


        <td> <%= link_to 'delete', {:action=>'destroy', :id=> reward}, :confirm=>"You sure?", :method=> :delete %></td>



      </tr>

  <% end %>

</table>


