        -moz-box-shadow: 0 0 10px #ccc;
        -webkit-box-shadow: 0 0 10px #ccc;
        box-shadow: 0 0 10px #ccc;
    }
   .comment{
       padding: 17px;
       margin-bottom: 10px;
       background: #f6f5ed;
       box-shadow: 0 1px 2px rgba(0,0,0,0.2);
   }
