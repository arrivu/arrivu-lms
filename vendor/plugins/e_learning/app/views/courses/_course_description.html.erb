<div id="tab-description">
    <div id="course_description" path="<%= course_course_descriptions_path(@context)%> ">
        <table>
            <tr>
               <td>
                 <h3><%= "Short Description" %></h3>
               </td>
            </tr>
            <tr>
               <td>
                 <textarea <% if @context.settings[:allow_user_to_design_course_detail_page] %> readonly="readonly"<%end %> id="short_description" name="short_description_txt" style="width: 300px;height:90px;"><%= @context.course_description.short_description  if @context.course_description != nil %></textarea>
                 <% if @e_learning  %>style="" <% end  %>
               </td>
            </tr>
            <tr>
               <td>
                 <h3><%= "Description" %></h3>
               </td>
            </tr>
            <tr>
               <td>
                 <textarea <% if @context.settings[:allow_user_to_design_course_detail_page] %> readonly="readonly"<%end %> id="long_description" name="long_description_txt" style="width: 600px;height:100px"><%= @context.course_description.long_description if @context.course_description != nil %></textarea>
               </td>
            </tr>
            <tr>
              <% unless @context.settings[:allow_user_to_design_course_detail_page] %>
                  <td>
                    <button id ="add_course_description" class="btn btn-primary" style= "margin-top: 21px;"
                    type="submit"><i class="icon-add"></i> <%= t('buttons.add_section', %{Submit Description}) %></button>
                  </td>
               <% end %>
            </tr>
        </table>
    </div>
 </div>

<%js_block do %>
    <script type="text/javascript">
        require([
            'jquery' /* $ */,
            'jquery.disableWhileLoading'
        ],function($){
            $("#add_course_description").click(function(){
              $("#content").disableWhileLoading($.ajax({
                type:'POST',
                url:$("#course_description").attr('path'),
                data: {
                       'short_description': $("#short_description").val(),
                       'long_description' : $("#long_description").val()
                },
                success: function(data){
                  $.flashMessage('Course Description Saved')
                },
                error: function(data){
                 if ($("#short_description").val() == "" ||  $("#long_description").val() == ""){
                    $.flashMessage('Enter Both Descriptions')
                 }
                }
               })
              );
            });
//            $("#tab-descriptions-link").click(function(){
//                alert("hi");
//            })
        });
    </script>
<%end %>